<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">
                <em class="fa fa-home"></em>
            </a></li>
            <li class="active">Khách Hàng</li>
        </ol>
    </div><!--/.row-->
    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-capitalize">sản phẩm</h1>
        </div>
    </div><!--/.row-->
    
    <!-- Nav -->
        
    <!-- body	 -->
        
    <div class="row">
        <div class="col-sm-12">
            
            <form class="form-inline" action="javascript:void(0)" method="post">
                    <div class="form-group ">
                        <input class="form-control inp" type="text" name="tencate" id="" placeholder="Tên Đơn Hàng">
                        <input class="btn btn-primary btn-md" type="submit" value="Tìm kiếm" name="themmoi">
                    </div>
                     
                    <a href="/admin/Products/addNew" class="btn btn-success " style="float: right;">Nhập thêm</a>
             

              

            </form>

            
            <br>
            <table border="1" class="table tbl">
                <thead>
                    <thead>
                        <tr>
                            <th class="text-capitalize">stt</th>
                            <th class="text-capitalize">id</th>
                            <th class="text-capitalize">Tên người nhận</th>
                            <th class="text-capitalize">Địa chỉ</th>
                            <th class="text-capitalize">Email</th>
                            <th class="text-capitalize">số điện thoại</th>
                            <th class="text-capitalize">ghi chú</th>
                            <th class="text-capitalize">phương thức thanh toán</th>
                            <th class="text-capitalize">Trạng Thái</th>
                            <th class="text-capitalize">hành động</th>

                        </tr>
                    </thead>
                </thead>
                <tbody>
            
                    <% if (data.itemList.length > 0) { %>
                        <% data.itemList.forEach(function(order, index) { %>

                            <tr style="height: 100px!important; overflow: hidden;">
                                <td><%= index + 1 %></td>
                                <td><%= order._id %></td>
                                <td><%= order.fullname %></td>
                                <td><%= order.address %></td>
                                <td><%= order.email %></td>
                                <td><%= order.phone %></td>
                                <td><%= order.noted %></td>
                                <td><%= order.payment %></td>
                                <td><%= order.status %></td>
                                <td><a href="/admin/orders/detail/<%= order._id %>">Chi tiết</a> </td>
                            </tr>

                        <% }); %>
                    <% } %>
        

                </tbody>

            </table>
        </div>
    
</div><!-- /.row -->	