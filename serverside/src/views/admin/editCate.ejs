<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">
                <em class="fa fa-home"></em>
            </a></li>
            <li class="active">Danh Mục / Cập nhật</li>
        </ol>
    </div><!--/.row-->
    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cập Nhật Danh Mục</h1>
        </div>
    </div><!--/.row-->
    
    <!-- Nav -->
        
    <!-- body	 -->
        
    <div class="row">
        <div class="col-sm-12">
            <form action="/admin/categories/update" method="post" id="form_valid">
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Mã danh mục</label>
                    <input name="_id" class="form-control" readonly value="<%= data._id %>">
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Tên danh mục</label>
                    <input name="categoryName"  class="form-control" value="<%= data.categoryName %>" required>
                </div>
    
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Ưu tiên</label>
                    <input name="priority" class="form-control" value="<%= data.priority %>" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Hiển thị</label>
                    <input name="display" class="form-control" value="<%= data.display %>" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <button type="submit" class="btn btn-info">Cập nhật</button>
                    <button type="reset" class="btn btn-info">Nhập lại</button>
                    <a href="/admin/categories/addnew" class="btn btn-info">Thêm mới</a>
                    <a href="/admin/categories/" class="btn btn-info">Danh sách</a>
                </div>
            </form>
        </div>
    
</div><!-- /.row -->	