<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">
                <em class="fa fa-home"></em>
            </a></li>
            <li class="active text-capitalize">sản phẩm / Cập Nhật</li>
        </ol>
    </div><!--/.row-->

    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-capitalize">Cập Nhật sản phẩm</h1>
        </div>
    </div><!--/.row-->
    
    
    <!-- Nav -->
        
    <!-- body	 -->
        
    <div class="row">
        <div class="col-sm-12">
            <form action="/admin/products/update" method="post"id="form_valid" enctype="multipart/form-data">
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Mã sản phẩm</label>
                    <input name="_id" class="form-control" readonly value="<%= data.Products._id %>">
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    
                    <label>Tên danh mục</label>
                    <select name="categoryId" id="" class="form-control">
                        <% if (typeof data.Categories !== 'undefined') { %>
                          <% data.Categories.forEach(element => { %>
                                <% if (data.Products.categoryId._id === element._id) { %>
                                    <option value="<%= element._id %>" selected><%= element.categoryName %></option>

                                <% } else {%>
                                    <option value="<%= element._id %>"><%= element.categoryName %></option>

                                <% } %>
                          <% }) %>
                    <% } %>
                   
                    </select>
                </div>
    
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Tên sản phẩm</label>
                    <input name="productName" class="form-control" value="<%= data.Products.productName %>" required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Hình ảnh</label>
                    <input type="file" name="productImage" class="form-control"  required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Đơn giá</label>
                    <input name="price" class="form-control" value="<%= data.Products.price%>" required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Số lượng</label>
                    <input type="number" name="quantity" class="form-control" value="<%= data.Products.quantity %>" required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Màu sắc</label>
                    <input name="color" class="form-control" value="<%= data.Products.color%>" required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Kích thước</label>
                    <input name="size" class="form-control" value="<%= data.Products.size %>" required>
                </div>
                <div class="form-group col-sm-12 col-lg-6">
                    <label>Mô tả</label>
                    <textarea class="form-control" id="content" rows="3" name="description" required><%= data.Products.description %></textarea>
                </div>
                <div class="form-group col-sm-12  col-lg-6">
                    <button type="submit" class="btn btn-info">Thêm mới</button>
                    <button type="reset" class="btn btn-info">Nhập lại</button>
                    <a href="/admin/users/addNew" class="btn btn-info">Thêm mới</a>
                    <a href="/admin/users/" class="btn btn-info">Danh sách</a>
                </div>
            </form>
        </div>
    
</div><!-- /.row -->	