            <h1 class="page-header">Thêm mới Khách Hàng</h1>
        </div>
    </div><!--/.row-->
    
    <!-- Nav -->
        
    <!-- body	 -->
        
    <div class="row">
        <div class="col-sm-12">
            <form action="/admin/users/addNew" method="post"id="form_valid">
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Mã khách hàng</label>
                    <input name="_id" class="form-control" readonly value="Token">
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Tài khoản</label>
                    <input name="username"  class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Tên khách hàng</label>
                    <input name="fullname" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Mật khẩu</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Số điện thoại</label>
                    <input name="phone" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Địa chỉ</label>
                    <input name="address" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Kích hoạt?</label>
                    <input name="active" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6">
                    <label>Vai trò</label>
                    <input name="role" class="form-control" required>
                </div>
                <div class="form-group col-sm-16 col-lg-6 ">
                    <button type="submit" class="btn btn-info">Thêm mới</button>
                    <button type="reset" class="btn btn-info">Nhập lại</button>
                    <a href="/admin/users/addNew" class="btn btn-info">Thêm mới</a>
                    <a href="/admin/users/" class="btn btn-info">Danh sách</a>
                </div>
            </form>
        </div>
    
